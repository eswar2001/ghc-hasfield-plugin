cabal-version:      2.4
name:               ghc-hasfield-plugin
version:            0.1.0.0

library
  default-language: Haskell2010
  hs-source-dirs:
      src
  exposed-modules:
      Data.Record.Plugin.HasFieldPattern
  other-modules:
      Data.Record.Plugin.Shim
  build-depends:
      base             >= 4.13   && < 4.17
    , containers       >= 0.6.2  && < 0.7
    , mtl              >= 2.2.1  && < 2.3
    , transformers
    , primitive        
    -- >= 0.7    && < 0.8
    , uniplate 
    , ghc              >=9.2.8
    , template-haskell

test-suite test
  default-language:
      Haskell2010
  type:
      exitcode-stdio-1.0
  hs-source-dirs:
      test
  main-is:
      PluginTest.hs
  other-modules:
      TestTypes
      Unused
  build-depends:
      base             >= 4.13   && < 4.17
    , record-hasfield  >= 1.0    && < 1.1
    , tasty
    , tasty-hunit
    , record-dot-preprocessor
    , ghc-hasfield-plugin
